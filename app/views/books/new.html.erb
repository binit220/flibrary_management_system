<h2>Add new Book</h2>

<%= form_with model: @book do |form| %>
	<div>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</div>

	<div>
		<%= form.label :Author %><br>
		<%= form.text_field :author %>
	</div>

	<div>
		<%= form.label :genr %><br>
		<%= form.text_field :genr %>
	</div>

	<div>
		<%= form.label :Isbn %><br>
		<%= form.text_field :isbn %>
	</div>

	<div>
		<%= form.label :availability %><br>
		<%= form.text_field :availability %>
	</div>

	<div>
		<%= form.label :count %><br>
		<%= form.text_field :item_count %>
	</div>

	<%= form.select :city, [["Berlin", "BE"], ["Chicago", "CHI"], ["Madrid", "MD"]] %>


	<div>
    <%= form.submit %>
  </div>
<%end%>


<%= form_with model: @book do |form| %>
	<%= form.date_select :birth_date %>
<%end%>

<%= form_with model: @book do |form| %>
	<%= form.file_field :picture %>
<%end%>

