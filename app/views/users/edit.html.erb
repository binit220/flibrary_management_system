<h2>Update User</h2>

<%= form_with model: @user do |form| %>
	<div>
		<%= form.label :First_name %><br>
		<%= form.text_field :first_name %>
	</div>

    <div>
		<%= form.label :Last_name %><br>
		<%= form.text_field :last_name %>
	</div>

	<div>
		<%= form.label :Email %><br>
		<%= form.text_field :email %>
	</div>

	<div>
		<%= form.label :Mobile_no %><br>
		<%= form.text_field :phone_number %>
	</div>

	<div>
    <%= form.submit %>
  </div>
<%end%>