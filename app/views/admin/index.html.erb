<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>


<h1>Admin Data</h1>
<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone number</th>
    <th>Date_of_birth</th>
    <th>Action</th>
  </tr>
  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.first_name%></td>
      <td><%= admin.last_name%></td>
      <td><%= admin.email %></td>
      <td><%= admin.phone_number %></td>
      <td><%= admin.date_of_birth %></td>
      <td>
				<% if current_user.email == admin.email %>
					<div style="display: inline-block;">
						<%= button_to "Edit Admin", edit_user_path(admin), method: :get, class:"btn-success border-0 rounded-pill shadow p-2 m-2", style: "background-color: yellow;" %>
					</div>
					<div style="display: inline-block;">
						<%= button_to "Delete Admin", user_path(admin), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn-danger border-0 rounded-pill shadow p-2 m-2", style: "background-color: #FFB6C1;" %>
					</div>
				<% end %>
			</td>
    </tr>
  <% end %>
</table>

