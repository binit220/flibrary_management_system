<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>


<h1>Members</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile_no</th>
    <th>Action</th>
  </tr>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.email %></td>
      <td><%= member.mobile_no %></td>
      <td>
  			<div style="display: inline-block;">
    			<%= button_to "Edit Member", edit_member_path(member), method: :get, class:"btn-success border-0 rounded-pill shadow p-2 m-2", style: "background-color: yellow;" %>
  			</div>
  			<div style="display: inline-block;">
    			<%= button_to "Delete Member", member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn-danger border-0 rounded-pill shadow p-2 m-2", style: "background-color: #FFB6C1;" %>
  			</div>
			</td>
    </tr>
  <% end %>
</table>

<div class="d-flex">
    <%= button_to "Add New Member", new_member_path, method: :get, class:"btn-warning border-0 rounded-pill shadow p-3 m-3", style: "background-color: green;" %>
</div>
